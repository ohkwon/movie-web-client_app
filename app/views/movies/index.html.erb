<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Length</th>
    <th>Description</th>
    <th>Year</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie["title"] %></td>
      <td><%= movie["movie_length"] %></td>
      <td><%= movie["description"] %></td>
      <td><%= movie["year"] %></td>
    </tr>
  <% end %>
</table>